<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AAD"
    tools:context=".Footprint1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yyyy" />



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/profile_img"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="103dp"
        android:layout_height="92dp"
        android:layout_marginTop="450dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/download"
        android:layout_marginRight="145dp"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="65dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Hello User,"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:text="Your carbon footprint data."
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn26"
        android:layout_width="165dp"
        android:layout_height="61dp"
        android:text="View Analysis"
        android:layout_marginLeft="130dp"
        android:textColorLink="#5E17EA"
        android:layout_marginTop="640dp"
        android:backgroundTint="#5E17EA" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Footprints covered"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="124dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="800"
        android:layout_marginTop="300dp"
        android:textColor="#FFC107"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"/>


</RelativeLayout>