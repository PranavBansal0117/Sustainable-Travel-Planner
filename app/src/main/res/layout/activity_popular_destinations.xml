<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopularDestinations"
    android:background="#121b2c">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="Popular Destinations"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn16"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/singapore"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singapore"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:id="@+id/btn17"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/india"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:id="@+id/btn18"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/dubai"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dubai"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:id="@+id/btn19"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ny"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="10dp"/>
            <ImageButton
                android:id="@+id/btn20"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/malaysia"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malaysia"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>